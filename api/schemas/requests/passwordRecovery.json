{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "https://sbc-pdu.romanondracek.cz/apiSchemas/requests/passwordRecovery.json",
	"type": "object",
	"title": "Password recovery",
	"required": [
		"email"
	],
	"properties": {
		"email": {
			"$id": "#/properties/email",
			"type": "string",
			"format": "email",
			"title": "E-mail address",
			"example": "admin@exaple.org"
		},
		"baseUrl": {
			"$id": "#/properties/baseUrl",
			"type": "string",
			"format": "url",
			"title": "Frontend base URL",
			"example": "http://localhost/"
		}
	},
	"additionalProperties": false
}
