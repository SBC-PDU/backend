{varType App\Models\Database\Entities\User $user}
<html>
<head>
	<meta charset='utf-8'>
	<title>{include title}</title>
	<style>
		body {
			background-color: #ebedef;
		}
		.body {
			background-color: #ebedef;
			color: #000000;
			padding: 32px;
		}
		.content {
			padding: 18px !important;
			word-wrap: break-word;
			background-clip: border-box;
			border: 1px solid;
			border-radius: 4px;
			background-color: #ffffff;
			border-color: #d8dbe0;
		}
		.container {
			margin: auto;
			padding-left: 16px;
			padding-right: 16px;
			max-width: 83.3333333333%;
		}
		.header {
			width: 100%;
			text-align: center;
			padding-bottom: 32px;
		}
	</style>
</head>
<body>
	<div class='body'>
		<div class='container'>
			<div class='header'>
				<h1>{_mail.title}</h1>
			</div>
			<div class='content'>	<p>
					{_mail.greeting, [username => $user->name]|breakLines}
				</p>

				{include body}

				<p>
					{_mail.footer|breakLines}
				</p>
			</div>
		</div>
	</div>
</body>
</html>
